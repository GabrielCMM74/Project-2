<body><br><br><br><br>
  <div class="brand-title">Edit Portfolio</div>
    
  </div>

    <table  class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Portfolio</th>
                <th>Date</th>
                <th>Budget</th>
                <th>Expense</th>
                <th>Amount</th>
                <th>Sum</th>
                
            </tr>
        </thead>
        <tbody>
         
                <tr>
                  <td><%= detailsPortfolio.portfolio %></td>
                  <td><%= detailsPortfolio.date.toString().slice(0, 15)%></td>
                  <td>$<%= detailsPortfolio.budget %></td>
                  <td><%= detailsPortfolio.expenseType %></td>
                  <td>$<%= detailsPortfolio.amount %></td>
                  <td>$<%= detailsPortfolio.amountLeft = detailsPortfolio.budget - detailsPortfolio.amount %></td>
        
                </tr>
              <!-- Close the forEach using EJS here -->
              
            <!-- Write the line of EJS to iterate over movies using forEach -->
        </tbody>
    </table>
    <div class="container">

      <form name="portfolio" action="/portfolios/<%= detailsPortfolio._id %>?_method=PUT" method="POST" class="form">
        <div class="inputs"></div>

  
    
        <label>Portfolio
            <input type="text" name="portfolio" value="<%= detailsPortfolio.portfolio %>">
        </label><br>
        
        <label>Budget Amount
            <input type="text" name="budget" value="<%= detailsPortfolio.budget %>">
        </label><br>
        
          <label>Expense Category
            <select name="expenseType">
                <option value="<%= detailsPortfolio.expenseType %>"><%= detailsPortfolio.expenseType %></option>
                <option value="Housing">Housing</option>
                <option value="Food">Food</option>
                <option value="Utilities">Utilities</option>
                <option value="Loans">Loans</option>
                <option value="Medical">Medical</option>
                <option value="Insurance">Insurance</option>
                <option value="Car">Car</option>
                <option value="Gas">Gas</option>
                <option value="Clothes">Clothes</option>
                <option value="Other">Other</option>
            </select>
          </label><br>
        
          <label>Amount Spent
            <input type="text" name="amount" min="0" max="9999999" value="<%=detailsPortfolio.amount %>">
          </label><br>
        
          <label>Date
            <input type="datetime-local" name="date" value="<%= detailsPortfolio.date%>">
          </label><br>
          <input type="submit" class="btn btn-primary" value="Add Edits">
        </form> 
        
        <form method= "get" action="/portfolios">
          <button class="btn btn-warning"> Return to Portfolio </button>
        </div>
          </form><br><br><br><br><br><br><br><br><br><br><br>
        
        
</body>


