
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/images/favicon.jpeg"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/newstyles.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title display="none"></title>
</head>
<body><br><br>
  <div class="brand-title">Edit Portfolio</div>
  </div>
    <table id="lin" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Portfolio</th>
                <th>Date</th>
                <th>Budget</th>
                <th>Expense</th>
                <th>Amount</th>
                <th>Sum</th>
            </tr>
        </thead>
        <tbody >
                <tr id="lin">
                  <td><%= detailsPortfolio.portfolio %></td>
                  <td><%= detailsPortfolio.date.toString().slice(0, 15)%></td>
                  <td>$<%= detailsPortfolio.budget %></td>
                  <td><%= detailsPortfolio.expenseType %></td>
                  <td>$<%= detailsPortfolio.amount %></td>
                  <td>$<%= detailsPortfolio.amountLeft = detailsPortfolio.budget - detailsPortfolio.amount %></td>
                </tr>
        </tbody>
    </table>
    <div class="container">
      <form name="portfolio" action="/portfolios/<%= detailsPortfolio._id %>?_method=PUT" method="POST" class="form">
        <div class="inputs"></div>
        <label>Portfolio
            <input type="text" name="portfolio" value="<%= detailsPortfolio.portfolio %>">
        </label><br>
        <label>Budget Amount
            <input type="text" name="budget" value="<%= detailsPortfolio.budget %>">
        </label><br>
          <label>Expense Category
            <select name="expenseType">
                <option value="<%= detailsPortfolio.expenseType %>"><%= detailsPortfolio.expenseType %></option>
                <option value="Housing">Housing</option>
                <option value="Food">Food</option>
                <option value="Utilities">Utilities</option>
                <option value="Loans">Loans</option>
                <option value="Medical">Medical</option>
                <option value="Insurance">Insurance</option>
                <option value="Car">Car</option>
                <option value="Gas">Gas</option>
                <option value="Clothes">Clothes</option>
                <option value="Other">Other</option>
            </select>
          </label><br>
          <label>Amount Spent
            <input type="text" name="amount" min="0" max="9999999" value="<%=detailsPortfolio.amount %>">
          </label><br>
          <label> Add Date
            <input type="datetime-local" name="date" value="<%= detailsPortfolio.date.toISOString().split(".")[0]%>">
          </label><br><br>
          <input type="submit" class="btn btn-primary" value="Add Edits">
        </form> 
        <form method= "get" action="/portfolios">
          <button class="btn btn-warning"> Return to Portfolio </button>
        </div>
          </form><br><br><br><br><br><br><br><br><br><br><br>
</body>
<%- include('../partials/footer') %>
