<%- include('../partials/header') %>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Add portfolio</title>
</head>
<body>
  
    <h2>Enter your information</h2>

<form action="/portfolios" method="POST" class="form">

    <table id="text" class="table table-dark table-hover table-bordered">
        
<label>Portfolio
    <input type="text" name="portfolio" placeholder="Insert portfolio name">
</label><br>

<label>Budget Amount
    <input type="number" name="budget" placeholder="Insert budget amount">
</label><br>

  <label>Expense Category
    <select name="expenseType">
        <option value="Housing">Housing</option>
        <option value="Food">Food</option>
        <option value="Utilities">Utilities</option>
        <option value="Loans">Loans</option>
        <option value="Medical">Medical</option>
        <option value="Insurance">Insurance</option>
        <option value="Car">Car</option>
        <option value="Gas">Gas</option>
        <option value="Other">Other</option>
    </select>
  </label><br>

  <label>Amount Spent
    <input type="number" name="amount" min="0" max="9999999" placeholder="$$$">
  </label><br>

  <label>Date
    <input type="date" name="date">
  </label><br>


  <input type="submit" value="Add Portfolio">
</form>
</table>
</body>

<%- include('../partials/footer') %>
