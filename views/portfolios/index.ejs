<%- include('../partials/header') %>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous"> -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <title></title>
    </head>
    <body>
        <h5>
            <form method= "get" action="portfolios/new">
           <button id="text2" class="btn btn-outline-dark"> Create Portfolio </button>
            </form>
        </h5>
        <table id="text1" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Portfolio</th>
                    <th>Date</th>
                    <th>Budget</th>
                    <th>Expense</th>
                    <th>Amount</th>
                    <th>Sum</th>
                    
                </tr>
            </thead>
            <tbody>
                <% portfolios.sort((a, b) => b.portfolio.localeCompare(a.portfolio)).forEach(p => { %>
                    <tr>
                        <% if (user && user._id.equals(p.user)) { %>  
                      <td class="edit1"><%= p.portfolio %><a class="editA"  href="/portfolios/<%= p._id %>"><img class="edit"  src="/images/edit.png"></a></td>
                      <td><%= p.date.toString().slice(0, 15) %></td>
                      <td>$<%= p.budget %></td>
                      <td><%= p.expenseType %></td>
                      <td>$<%= p.amount %></td>
                      <td>$<%= p.amountLeft = p.budget - p.amount %></td>
                      <td><form action="/portfolios/<%= p._id %>?_method=DELETE" method="POST">
                        <input class="edit" type="image" src="/images/delete.png"></input></td>
                        <% } %>
                    </tr>
                  <% }); %>
            </tbody>
        </table>
    </body>
    </html>










