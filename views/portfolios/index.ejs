<%- include('../partials/header') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel='stylesheet' href='/public/stylesheets/style.css' />
        <title>Portfolio</title>
    </head>

    <body>
        <h5>
            <form method= "get" action="portfolios/new">
           <button class="shadow-lg p-3 mb-4 bg-body rounded"> Create Portfolio </button>
            </form>
        </h5>
        <table id="text1" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Portfolio</th>
                    <th>Date</th>
                    <th>Budget</th>
                    <th>Expense</th>
                    <th>Amount</th>
                    <th>Sum</th>
                    
                </tr>
            </thead>
            <tbody>
                <% portfolios.forEach(p => { %>
                    <tr>
                      <td><%= p.portfolio %></td>
                      <td><%= p.date.toString().slice(0, 15) %></td>
                      <td>$<%= p.budget %></td>
                      <td><%= p.expenseType %></td>
                      <td>$<%= p.amount %></td>
                      <td>$<%= p.amountLeft = p.budget - p.amount %></td>
                      <td><form action="/portfolios/<%= portfolios._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete Line</button></td>
            
                    </tr>
                  <!-- Close the forEach using EJS here -->
                  <% }); %>
                <!-- Write the line of EJS to iterate over movies using forEach -->
            </tbody>
        </table>



    </body>

    </html>










