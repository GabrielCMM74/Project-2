    </head>

    <body>
        <h5>
         
            <form method= "get" action="portfolios/new">
           <button class="shadow-lg p-3 mb-4 bg-body rounded"> Create Portfolio </button>
            </form>
        </h5>
        <table id="text1" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Portfolio</th>
                    <th>Date</th>
                    <th>Budget</th>
                    <th>Expense</th>
                    <th>Amount</th>
                    <th>Sum</th>
                    
                </tr>
            </thead>
            <tbody>
                <% portfolios.sort((a, b) => b.portfolio.localeCompare(a.portfolio)).forEach(p => { %>
                    <tr>
                     
                      <td><%= p.portfolio %><a href="/portfolios/<%= p._id %>"> edit</a></td>
                      <td><%= p.date.toString().slice(0, 15) %></td>
                      <td>$<%= p.budget %></td>
                      <td><%= p.expenseType %></td>
                      <td>$<%= p.amount %></td>
                      <td>$<%= p.amountLeft = p.budget - p.amount %></td>
                      <td><form action="/portfolios/<%= p._id %>?_method=DELETE" method="POST">
                        <button type="submit">x</button></td>
                        
            
                    </tr>
                  <!-- Close the forEach using EJS here -->
                  <% }); %>
                <!-- Write the line of EJS to iterate over movies using forEach -->
            </tbody>
        </table>
        


    </body>

    </html>










